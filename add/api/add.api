syntax = "v1"

info (
	title:   "API 接口文件示例"
	desc:    "演示如何编写 API 接口文件"
	author:  "一见"
	date:    "2023年12月07日"
	version: "v1"
)

// https://go-zero.dev/docs/tutorials/api/parameter
type AddReq {
	//A int `path:"a"` // 这种方式，请求时 a 的值为 url 路径的一部分，而不是参数的一部分，调用示例：/add/1/3，这里 1 为 a 的值，3 为 b 的值，可通过 internal/handler/routes.go 的实现看出来
	//B int `path:"b"`
	A int `json:"a"`
	B int `json:"b"`
}

type AddReply {
	Sum int `json:"sum"`
}

service Adder {
	@handler add
	get /add (AddReq) returns (AddReply)
}

